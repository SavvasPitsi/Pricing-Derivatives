{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-g",
                "-I${workspaceFolder}/custom_headers",
                "-I${VCPKG_ROOT}/installed/x64-linux/include/",
                "-I${VCPKG_ROOT}/installed/x64-linux/include/gsl/",
                "-I/usr/include/python3.13",         
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L${VCPKG_ROOT}/installed/x64-linux/lib/", //linking comes last
                "-lgslcblas",
                "-lgsl",
                "-lpython3.13"     
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}